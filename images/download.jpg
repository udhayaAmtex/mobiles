<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product Grid</title>
  <link rel="stylesheet" href="style.css">
  <style>
    body {
      font-family: Arial, sans-serif;
      margin: 0;
      padding: 20px;
      background-color: #f0f0f0;
    }

    .product-grid {
      display: grid;
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 20px;
    }

    .product-card {
      background-color: #fff;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
      padding: 20px;
      border-radius: 8px;
      text-align: center;
    }

    .product-image {
      max-width: 100%;
      height: 100px;
      border-radius: 4px;
      margin-bottom: 10px;
    }

    .product-name {
      font-size: 18px;
      font-weight: bold;
      margin-bottom: 10px;
    }

    .product-description {
      font-size: 14px;
      color: #555;
      margin-bottom: 10px;
    }

    .view-details-btn {
      background-color: #3498db;
      color: #fff;
      padding: 10px 15px;
      border: none;
      border-radius: 4px;
      cursor: pointer;
      transition: background-color 0.3s;
    }

    .view-details-btn:hover {
      background-color: #2980b9;
    }
  </style>
</head>
<body>

  <div class="product-grid">
    <!-- Product 1 -->
    <div class="product-card">
      <img class="product-image" src="images\download (1).jpg" alt="Product 1">
      <div class="product-name">VIVO Y16</div>
      <div class="product-description">Brief description of Product 1.</div>
      <button class="view-details-btn">View Details</button>
    </div>

    <!-- Product 2 -->
    <div class="product-card">
      <img class="product-image" src="images\download.jpg" alt="Product 2">
      <div class="product-name">REDMI NOTE 12</div>
      <div class="product-description">Brief description of Product 2.</div>
      <button class="view-details-btn">View Details</button>
    </div>

    <div class="product-card">
        <img class="product-image" src="images\images (1).jpg" alt="Product 2">
        <div class="product-name">REDMI NOTE 12</div>
        <div class="product-description">Brief description of Product 2.</div>
        <button class="view-details-btn">View Details</button>
      </div>

      <div class="product-card">
        <img class="product-image" src="images\images (2).jpg" alt="Product 2">
        <div class="product-name">REDMI NOTE 12</div>
        <div class="product-description">Brief description of Product 2.</div>
        <button class="view-details-btn">View Details</button>
      </div>

      <div class="product-card">
        <img class="product-image" src="images\images (3).jpg" alt="Product 2">
        <div class="product-name">REDMI NOTE 12</div>
        <div class="product-description">Brief description of Product 2.</div>
        <button class="view-details-btn">View Details</button>
      </div>

      <div class="product-card">
        <img class="product-image" src="images\images.jpg" alt="Product 2">
        <div class="product-name">REDMI NOTE 12</div>
        <div class="product-description">Brief description of Product 2.</div>
        <button class="view-details-btn">View Details</button>
      </div>

    <!-- Add more product cards as needed -->

  </div>

</body>
</html>
